# Example environment variables for perplexity-clone-backend
# Copy this file to `.env` and fill in values for your environment.

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/perplexity
MEMORY_DATABASE_URL=postgresql://user:password@localhost:5432/perplexity_memory
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# LLM Provider defaults (override per-user in DB in production)
LLM_PROVIDER=cohere
LLM_MODEL=
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=1024
LLM_STREAMING=false

# Embedding provider
EMBEDDING_PROVIDER=huggingface_endpoint
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct

# API keys (optional system-level; production should use per-user keys)
GROQ_API_KEY=
GEMINI_API_KEY=
OPENROUTER_API_KEY=
COHERE_API_KEY=
MISTRAL_API_KEY=
NIM_API_KEY=
ANTHROPIC_API_KEY=
HF_API_KEY=
GOOGLE_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_CX=
TAVILY_SEARCH_API_KEY=
EXA_SEARCH_API_KEY=
SERPAPI_API_KEY=
SCRAPEDO_CRAWLER_API_KEY=
FIRECRAWL_API_KEY=
SCRAPER_CRAWLER_API_KEY=

# Additional service-specific base URLs (optional)
NIM_BASE_URL=
OPENROUTER_BASE_URL=

# Environment name used by logger
ENVIRONMENT=development

# Langsmith (optional telemetry / logging)
LANGSMITH_API_KEY=

# Vector store / Pinecone
PINECONE_API_KEY=
PINECONE_INDEX_NAME=perplexity-clone-docstore
PINECONE_DIMENSION=1024
PINECONE_METRIC=cosine
PINECONE_URI=

# Web Search
WEB_SEARCH_PROVIDER=duckduckgo
GOOGLE_CSE_ID=

# Web Scraper
WEB_SCRAPER_PROVIDER=crawl4ai

# Storage (S3 / Supabase)
S3_STORAGE_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_STORAGE_BUCKET_NAME=
S3_STORAGE_REGION=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_API_KEY=

# Memory & Checkpointing
MEMORY_PROVIDER=postgres
CHECKPOINT_PROVIDER=postgres
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# JWT & Auth
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# API Key Encryption
API_KEY_ENCRYPTION_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Server
WORKERS=1
HOST=0.0.0.0
PORT=8089
RELOAD=false

# Feature Flags
ENABLE_LOGFIRE=true
ENABLE_BACKGROUND_TASKS=false

# Logfire
LOGFIRE_TOKEN=
